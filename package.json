{
  "name": "ai_todolist",
  "version": "1.0.0",
  "main": "dist-electron/main/index.js",
  "description": "AI 기반 TodoList 데스크톱 앱",
  "author": "HeeJung",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"wait-on tcp:5173 && npm run electron-main:build && cross-env NODE_ENV=development electron .\"",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-main:build": "vite build --config electron.vite.config.ts",
    "build": "npm run build:vite && npm run electron-main:build && electron-builder",
    "build:vite": "tsc && vite build",
    "build:electron": "electron-builder",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:migrate": "drizzle-kit migrate:sqlite",
    "db:studio": "drizzle-kit studio",
    "postinstall": "electron-rebuild",
    "electron-rebuild": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "typescript",
    "sqlite",
    "drizzle",
    "ai",
    "todolist"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.18.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "drizzle-orm": "^0.44.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "build": {
    "appId": "com.heejung.aitodolist",
    "productName": "AI TodoList",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
